# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
	config.vm.box = "ubuntu/trusty64"


	# Copy package generated by `package-for-debian'
	config.vm.provision "file", source: "../package-for-debian/violetland_0.5-rc1_amd64.deb", destination: "/home/vagrant/violetland_0.5-rc1_amd64.deb"


	# Install package to check if necessary dependencies are downloaded
	# automatically
	config.vm.provision "shell", inline: <<-SHELL
		sudo apt-get update
		sudo apt-get install -y gdebi

		sudo gdebi --non-interactive violetland_0.5-rc1_amd64.deb
	SHELL

	
end

